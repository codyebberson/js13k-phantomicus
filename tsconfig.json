{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "types": ["vitest/globals"],
    "moduleResolution": "Node",
    "newLine": "lf",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
